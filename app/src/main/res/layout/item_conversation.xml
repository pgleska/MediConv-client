<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_conversation"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp">

            <TextView
                android:id="@+id/item_conversation_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textSize="20sp"
                android:text="John Wick"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/item_conversation_date"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@id/item_conversation_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_conversation_latest"
                android:layout_below="@id/item_conversation_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:lines="1"
                android:ellipsize="end"
                android:text="Lorem ipsum dolor sit amet,"
                android:textSize="14sp"
                android:textAllCaps="false" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
